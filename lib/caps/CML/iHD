    ),
    crop        = dict(
      ifmts = ["NV12", "YV12", "I420", "P010", "YUY2", "BGRA"],
      ofmts = ["NV12", "YV12", "I420",         "YUY2", "BGRA"],
    ),
    sharpen     = dict(
      ifmts = ["NV12", "YV12", "I420", "P010", "YUY2", "BGRA"],
      ofmts = ["NV12", "YV12", "I420",         "YUY2", "BGRA"],
    ),
    deinterlace = dict(
      bob             = dict(
        ifmts = ["NV12", "YV12", "P010", "YUY2"],
